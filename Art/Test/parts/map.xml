<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE art SYSTEM "../../Adapter/Map/Loader/Xml.dtd" >
<art>
    <attributeTypes>
        <attributeType alias="default" databaseType="VARCHAR" length="32"/>
        <attributeType alias="email" class="email" options="'lookup':false" databaseType="VARCHAR" length="255"/>
        <attributeType alias="date"  class="date"  options="'today':true" databaseType="DATE" length="false"/>
    </attributeTypes>
    
    <classes>
        <class name="contact" databaseTable="Tcontact" identity="designation" databaseIdField="contact_id">
            <attribute name="designation"/>
            
            <associated to="login"    min="0" max="1" reference="external" composition="true" name="hasLogin" />
            <associated to="photo"    min="0" max="*" reference="external" composition="true" />
            <associated to="company"    min="0" max="1" reference="internal"  />
            <associated to="address"    min="0" max="1" reference="class" name="hasAddress"  />
            <associated to="address"    min="0" max="*" reference="class"   />
            
        </class>
        
        <class name="hasAddress" association="true">
            <associated to="company"/>
        </class>
        
        <class name="login">
            <attribute name="name"/>
        </class>
         <class name="photo" >
            <attribute name="name"/>
        </class>
        <class name="company" >
            <attribute name="name"/>
        </class>
        <class name="address">
            <attribute name="name"/>
            <associated to="contact"    min="0" max="*" reference="class"   />
        </class>
        
      
       
    </classes>
</art>
